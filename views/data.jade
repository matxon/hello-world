extends layot

  

block content
  #dialog-form(title="Жаңа заряд егізу")
    p.validateTips All form fields are required.
    form(role='form')
      .form-group
          label(for="name") Зарядтың атауы
          input#name(type="text", name="name", value="Кумулятивный заряд PowerJet HMX 4505", class="form-control")
      .form-group
          label(for="ed") Өлшем бірлігі
          input#autocomplete.form-control(type="text", name="ed")
      input(type="submit", tabindex="-1", style="position: absolute; top:-1000px;")

  .container
    h2 Зарядтардың тізімі
    table#charges.table
      thead
        tr
          - each item in th
            th= item
          th Әрекет
      tbody
        - if (tabl!=NULL)
          - for (var i=0; i < tabl.length; i++ ) {
          tr
            each item, key in tabl[i]
              td(class= key) #{item} 
            td
              button.btn.btn-default.btn-xs(type="button")
                span.glyphicon.glyphicon-pencil
              button.btn.btn-default.btn-xs(type="button")
                span.glyphicon.glyphicon-trash
          - }

    button#addcharges(type="button",
      class="btn btn-default navbar-btn") Жаңасын қосу
