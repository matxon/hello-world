extends layot

block content
  #dialog-form(title="Жаңа қолданушыны енгізу")
    p.validateTips All form fields are required.
    form(role='form')
      .form-group
          label(for="name") Аты
          input#name(type="text", name="name", class="form-control")
      .form-group
          label(for="password") Құпия сөз 
          input#password.form-control(type="password", name="password")
      input(type="submit", tabindex="-1", style="position: absolute; top:-1000px;")

  .container
    h2 Қолданушылардың тізімі
    table#charges.table
      thead
        tr
          - each item in th
            th= item
          th Әрекет
      tbody
        - if (tabl!=NULL)
          - for (var i=0; i < tabl.length; i++ ) {
          tr
            each item, key in tabl[i]
              td(class= key) #{item} 
            td
              button.btn.btn-default.btn-xs(type="button")
                span.glyphicon.glyphicon-pencil
              button.btn.btn-default.btn-xs(type="button")
                span.glyphicon.glyphicon-trash
          - }

    button#addcharges(type="button",
      class="btn btn-default navbar-btn") Жаңасын қосу
    button#test(type="button",
      class="btn btn-default navbar-btn") Базаға сақтау
block scripts
  script(src="js/users.js")
